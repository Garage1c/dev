	// комментарии
	ФункцииБизнесПроцессов.ДобавитьРаботуСКомментариями(ЭтаФорма);

	ПрочитатьРеквизиты();
	
	Если (ТипЗнч(Заказчик) = Тип("БизнесПроцессСсылка.СборкаЗаказа") И СкладПолучатель <> Заказчик.Склад) Тогда
		ОтправитьВСборку 					= Ложь;

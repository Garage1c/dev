			<MainAttribute>true</MainAttribute>
			<Settings xsi:type="DynamicList">
				<ManualQuery>true</ManualQuery>
				<DynamicDataRead>true</DynamicDataRead>
				<QueryText>ВЫБРАТЬ
	БП.Ссылка,
	БП.Проект,
	БП.ПометкаУдаления,
	БП.Номер,
	БП.Дата,
	БП.Завершен,
	БП.ВедущаяЗадача,
	БП.Стартован,
	БП.Тема,
	БП.ТипЗадачи,
	БП.Исполнитель,
	БП.Контроллер,
	БП.ПланируемаяДата,
	ВЫБОР 
		КОГДА БП.Оплачена ТОГДА 0 
		КОГДА БП.Завершен ТОГДА 1
		КОГДА БП.Стартован = ЛОЖЬ ТОГДА 3
		КОГДА БП.Стартован = ИСТИНА И Статусы.Статус.ТочкаМаршрута = &amp;ТочкаМаршрутаПодтверждение ТОГДА 4
		ИНАЧЕ 2
	КОНЕЦ КАК НомерКартинки,
	БП.Часов * ЕСТЬNULL(РазрПросмотрСтоимости.Да, ВЫБОР КОГДА БП.Исполнитель = &amp;ТекущийПользователь ТОГДА 1 ИНАЧЕ &amp;ЭтоПолныеПраваЧисло КОНЕЦ) КАК Часов,
	БП.ЦенаЗаЧас * ЕСТЬNULL(РазрПросмотрСтоимости.Да, ВЫБОР КОГДА БП.Исполнитель = &amp;ТекущийПользователь ТОГДА 1 ИНАЧЕ &amp;ЭтоПолныеПраваЧисло КОНЕЦ) КАК ЦенаЗаЧас,
	БП.Стоимость * ЕСТЬNULL(РазрПросмотрСтоимости.Да, ВЫБОР КОГДА БП.Исполнитель = &amp;ТекущийПользователь ТОГДА 1 ИНАЧЕ &amp;ЭтоПолныеПраваЧисло КОНЕЦ) КАК Стоимость,
	БП.Комментарий,
	БП.КонтролерПринимаетЗадачу,
	БП.Описание,
	БП.Автор,
	БП.ДатаЗавершения
	//ЕСТЬNULL(Статусы.Статус, "не установлено") КАК Статус
ИЗ
	БизнесПроцесс.ЗадачаРазработчику КАК БП
	
		ЛЕВОЕ СОЕДИНЕНИЕ 
			РегистрСведений.СтатусыБП  КАК Статусы
		ПО 
			Статусы.БизнесПроцесс = БП.Ссылка
			
		ЛЕВОЕ СОЕДИНЕНИЕ
		(	ВЫБРАТЬ РАЗЛИЧНЫЕ Ссылка КАК Пользователь, 1 КАК Да
			ИЗ Справочник.Пользователи.КтоМожетПросматриватьСтоимость
			ГДЕ Пользователь = &amp;ТекущийПользователь
		) КАК РазрПросмотрСтоимости
		ПО
			РазрПросмотрСтоимости.Пользователь = БП.Исполнитель
			
			
ГДЕ
	НЕ БП.Проект.Код ЕСТЬ NULL И // это типа RLS (когда изза него объект не найден)
	(&amp;ВключенФильтр = ЛОЖЬ ИЛИ &amp;ВключенФильтр = ИСТИНА И БП.Проект В ИЕРАРХИИ (&amp;Проект))
	
	И
	
	(&amp;Важность = &amp;ПустаяВажность ИЛИ &amp;Важность = ВЫБОР КОГДА БП.Важность = &amp;ПустаяВажность ТОГДА &amp;ОбчнаяВажность ИНАЧЕ БП.Важность КОНЕЦ)
	
	И
	
	(&amp;Исполнитель 	= &amp;ПустойПользователь ИЛИ &amp;Исполнитель = БП.Исполнитель) И
	(&amp;Контролер 	= &amp;ПустойПользователь ИЛИ &amp;Контролер = БП.Контроллер)
	
	И
	
	(&amp;Статус = "Все" ИЛИ
		(&amp;Статус = "Решаеться" И БП.Завершен = ЛОЖЬ И Статусы.Статус.ТочкаМаршрута = &amp;ТочкаМаршрутаРешение) ИЛИ
		(&amp;Статус = "Подтверждается" И БП.Завершен = ЛОЖЬ И Статусы.Статус.ТочкаМаршрута = &amp;ТочкаМаршрутаПодтверждение) ИЛИ
		(&amp;Статус = "Открыт" И БП.Завершен = ЛОЖЬ) ИЛИ
		(&amp;Статус = "Оплачено" И БП.Оплачена = ИСТИНА) ИЛИ
		(&amp;Статус = "НеОплачено" И БП.Завершен = ИСТИНА И БП.Оплачена = ЛОЖЬ И БП.Стоимость &lt;&gt; 0) ИЛИ
		(&amp;Статус = "Закрыт" И БП.Завершен = ИСТИНА)
		
	)
	</QueryText>

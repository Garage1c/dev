				<QueryText>ВЫБРАТЬ
	Спр.Ссылка,
	Спр.Родитель,
	Спр.Код,
	Спр.Наименование,
	Спр.ОписаниеПроекта,
	ЕСТЬNULL(БП.Сумма,0) + 
		ЕСТЬNULL(БП1.Сумма,0) + 
		ЕСТЬNULL(БП2.Сумма,0) + 
		ЕСТЬNULL(БП3.Сумма,0) + 
		ЕСТЬNULL(БП4.Сумма,0) КАК Сумма
ИЗ
	Справочник.Проекты КАК Спр

ЛЕВОЕ СОЕДИНЕНИЕ	
	(	ВЫБРАТЬ 	Проект, СУММА(Стоимость) КАК Сумма 
		ИЗ 					БизнесПроцесс.ЗадачаРазработчику
		СГРУППИРОВАТЬ ПО 	Проект
	) КАК БП
ПО
	Спр.Ссылка = БП.Проект	

ЛЕВОЕ СОЕДИНЕНИЕ	
	(	ВЫБРАТЬ 	Проект.Родитель.Родитель КАК Проект, СУММА(Стоимость) КАК Сумма 
		ИЗ 					БизнесПроцесс.ЗадачаРазработчику
		СГРУППИРОВАТЬ ПО 	Проект.Родитель.Родитель
	) КАК БП1
ПО
	Спр.Ссылка = БП1.Проект	

ЛЕВОЕ СОЕДИНЕНИЕ	
	(	ВЫБРАТЬ 	Проект.Родитель.Родитель.Родитель КАК Проект, СУММА(Стоимость) КАК Сумма 
		ИЗ 					БизнесПроцесс.ЗадачаРазработчику
		СГРУППИРОВАТЬ ПО 	Проект.Родитель.Родитель.Родитель
	) КАК БП2
ПО
	Спр.Ссылка = БП2.Проект	
	
ЛЕВОЕ СОЕДИНЕНИЕ	
	(	ВЫБРАТЬ 	Проект.Родитель.Родитель.Родитель.Родитель.Родитель КАК Проект, СУММА(Стоимость) КАК Сумма 
		ИЗ 					БизнесПроцесс.ЗадачаРазработчику
		СГРУППИРОВАТЬ ПО 	Проект.Родитель.Родитель.Родитель.Родитель.Родитель
	) КАК БП3
ПО
	Спр.Ссылка = БП3.Проект	

	
ЛЕВОЕ СОЕДИНЕНИЕ	
	(	ВЫБРАТЬ 	Проект.Родитель КАК Проект, СУММА(Стоимость) КАК Сумма 
		ИЗ 					БизнесПроцесс.ЗадачаРазработчику
		СГРУППИРОВАТЬ ПО 	Проект.Родитель
	) КАК БП4
ПО
	Спр.Ссылка = БП4.Проект	

ГДЕ
	Спр.ПометкаУдаления = ЛОЖЬ
	

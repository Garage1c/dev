		<query>
//{ВЫБРАТЬ
//	//БП.Ссылка 					КАК Ремонт1,
//	БП.Расчет                   КАК СпособОплаты1,
//	ЕСТЬNULL(Зад.Ссылка.ТочкаМаршрута, 
//				"Завершен") 	КАК Состояние1,
//	Рег.Сумма 					КАК Сумма1,
//	Рег.Выработка 				КАК Выработка1,
//	Рег.Номенклатура			КАК Номенклатура1,
//	Рег.Количество              КАК Количество1,
//	Зад.Ссылка					КАК ПоследняяЗадача1
//	//БП.Ссылка.ЗаказНаряд.Комментарий КАК КомментарийЗаказа
//}

ВЫБРАТЬ РАЗРЕШЕННЫЕ
	БП.Ссылка.ЗаказНаряд.Комментарий,
	БП.Ссылка 					КАК Ремонт,
	БП.Организация.Расчет       КАК СпособОплаты,
	ЕСТЬNULL(Зад.Ссылка.ТочкаМаршрута, 
				"Завершен") 	КАК Состояние,
	Рег.Сумма 					КАК Сумма,
	Рег.Выработка 				КАК Выработка,
	Рег.Номенклатура			КАК Номенклатура,
	Рег.Количество              КАК Количество,
	Зад.Ссылка					КАК ПоследняяЗадача
ИЗ
	БизнесПроцесс.РемонтИнструмента КАК БП       // Выбор БП
	
ЛЕВОЕ СОЕДИНЕНИЕ
	Задача.ЗадачаПользователю КАК Зад		// Задачи БП
ПО
	БП.Ссылка 			= Зад.БизнесПроцесс И
	Зад.ПометкаУдаления = ЛОЖЬ И
	Зад.Выполнена 		= ЛОЖЬ
	
ЛЕВОЕ СОЕДИНЕНИЕ 
	(
		ВЫБРАТЬ
			NULL 				КАК БизнесПроцесс,
			ЗаказНаряд,
			Номенклатура,
			КоличествоОборот 	КАК Количество,
			СуммаОборот 		КАК Сумма,
			ВыработкаОборот 	КАК Выработка
		ИЗ
			РегистрНакопления.РемонтИнструмента.Обороты
			
		ОБЪЕДИНИТЬ ВСЕ
			
		ВЫБРАТЬ
			NULL,
			Ссылка,
			Номенклатура,
			Количество,
			0,
			0
		ИЗ
			Документ.ЗаказНаряд.Товары
		ГДЕ
			Ссылка.Проведен = ЛОЖЬ И
			Ссылка.ПометкаУдаления = ЛОЖЬ
			
		ОБЪЕДИНИТЬ ВСЕ
			
		ВЫБРАТЬ
			Ссылка,
			NULL,
			Номенклатура,
			Количество,
			0,
			0
		ИЗ
			БизнесПроцесс.РемонтИнструмента.Товары
		ГДЕ
			Ссылка.ЗаказНаряд = &amp;ПустойЗаказ И
			Ссылка.ПометкаУдаления = ЛОЖЬ
			
	) КАК Рег		// Суммы БП
ПО
	ВЫБОР 
		КОГДА Рег.ЗаказНаряд ЕСТЬ NULL 
		ТОГДА БП.Ссылка = Рег.БизнесПроцесс
		ИНАЧЕ БП.ЗаказНаряд = Рег.ЗаказНаряд
	КОНЕЦ
		
ГДЕ
	БП.ПометкаУдаления = ЛОЖЬ

{	
ГДЕ
	БП.Дата &gt;= &amp;НачалоПериода И
	БП.Дата &lt;= &amp;КонецПериода
}</query>

	ВЫРАЗИТЬ(ПредставлениеКонтактнойИнформации.Объект КАК Справочник.Контрагенты),
	NULL,
	NULL,
	ВЫРАЗИТЬ(ПредставлениеКонтактнойИнформации.Представление КАК СТРОКА(300))

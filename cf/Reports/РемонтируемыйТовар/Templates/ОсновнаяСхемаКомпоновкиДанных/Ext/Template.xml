		<query>ВЫБРАТЬ РАЗРЕШЕННЫЕ
	ЕСТЬNULL(ЗадДат.ДатаВыполнения, Рег.Период) Дата,
	РАЗНОСТЬДАТ(ЗадДат.ДатаЗаявки, ЗадДат.ДатаВыполнения, ДЕНЬ) ДнейРемонта,
	ЗадДат.БизнесПроцесс,
	Рег.ЗаказНаряд,
	Рег.Номенклатура,
	Рег.Неисправность,
	Рег.Гарантия,
	Рег.ЦенаЗаЧас,
	Рег.Выработка,
	Рег.Сумма,
	Рег.Количество,
	Рег.Комментарий,
	Картинки.КолКартинок Картинки,
	ЕСТЬNULL(Зад.ТочкаМаршрута, 
				"Завершен") 	КАК Состояние

ИЗ
	РегистрНакопления.СведеньяОРемонте Рег
	
// Состояние задачи	
	
ЛЕВОЕ СОЕДИНЕНИЕ
	(
		ВЫБРАТЬ РАЗЛИЧНЫЕ БизнесПроцесс.ЗаказНаряд ЗаказНаряд, ТочкаМаршрута
		ИЗ		Задача.ЗадачаПользователю
		ГДЕ
				ПометкаУдаления = ЛОЖЬ И
				Выполнена 		= ЛОЖЬ И
				БизнесПроцесс ССЫЛКА БизнесПроцесс.РемонтИнструмента 
	) Зад
ПО
	Рег.ЗаказНаряд = Зад.ЗаказНаряд
	
// Дата задачи
	
ЛЕВОЕ СОЕДИНЕНИЕ
	(
		ВЫБРАТЬ БизнесПроцесс, БизнесПроцесс.ЗаказНаряд ЗаказНаряд, БизнесПроцесс.Дата ДатаЗаявки, МАКСИМУМ(ДатаВыполнения) ДатаВыполнения
		ИЗ		Задача.ЗадачаПользователю
		ГДЕ
				ПометкаУдаления = ЛОЖЬ И
				Выполнена 		= ИСТИНА И
				БизнесПроцесс ССЫЛКА БизнесПроцесс.РемонтИнструмента 
		СГРУППИРОВАТЬ ПО БизнесПроцесс
	) ЗадДат
ПО
	Рег.ЗаказНаряд = ЗадДат.ЗаказНаряд
	
// Картинки

ЛЕВОЕ СОЕДИНЕНИЕ
	(
		ВЫБРАТЬ Ссылка Процесс, Количество(Картинка) КолКартинок
		ИЗ		БизнесПроцесс.РемонтИнструмента.Картинки
		СГРУППИРОВАТЬ ПО Ссылка
		
	) Картинки
ПО
	Картинки.Процесс = ЗадДат.БизнесПроцесс


	
